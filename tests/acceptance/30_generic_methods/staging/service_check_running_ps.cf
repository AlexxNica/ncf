#######################################################
#
# Test if cron is started using ps
#
#######################################################

bundle common acc_path
{
  vars:
    "root" string => getenv("NCF_TESTS_ACCEPTANCE", 1024);
}

body common control
{
      inputs => { "${acc_path.root}/default.cf.sub", "${acc_path.root}/default_ncf.cf.sub", "@{ncf_inputs.default_files}" };
      bundlesequence  => { default("${this.promise_filename}") };
      version => "1.0";
}

#######################################################

bundle agent init
{
  vars:
    "service_regex"            string => "^/usr/sbin/cron$";
    "canonified_service_regex" string => canonify("${service_regex}");
}

#######################################################

bundle agent test
{
  methods:
    "ph1" usebundle => service_check_running_ps("${init.service_regex}");
}

#######################################################

bundle agent check
{
  classes:
    "ok" expression => "service_check_running_${init.canonified_service_regex}_ok.!service_check_running_${init.canonified_service_regex}_error";

  reports:
    ok::
      "$(this.promise_filename) Pass";
    !ok::
      "$(this.promise_filename) FAIL";
}

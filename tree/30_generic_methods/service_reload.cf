# @name Service reload
# @description Reload a service using the appropriate method
#
# @parameter service_name Service
# 
# @class_prefix service_reload
# @class_parameter service_name
# This bundle will define a class service_reload_${service_name}_{kept,repaired,not_ok,ok,reached}

bundle agent service_reload(service_name)
{
  vars:

    "canonified_service_name"      string => canonify("${service_name}");
    "canonified_init_command_name" string => canonify("/etc/init.d/${service_name} reload");
    "class_prefix"                 string => canonify("service_reload_${service_name}");

  methods:

    #Â Will be replaced later with less naive conditions (using either service, upstart, ...
    "reload"     usebundle => command_execution("/etc/init.d/${service_name} reload");
    "class copy" usebundle => _classes_copy("command_execution_${canonified_init_command_name}", "${class_prefix}");
    "report"     usebundle => _logger("Reload service ${service_name}", "${class_prefix}");

}

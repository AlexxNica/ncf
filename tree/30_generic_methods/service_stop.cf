# @name Service stop
# @description Stop a service using the appropriate method
#
# @parameter service_name Service
# 
# @class_prefix service_stop
# @class_parameter service_name
# This bundle will define a class service_stop_${service_name}_{kept,repaired,error,ok,reached}

bundle agent service_stop(service_name)
{
  vars:

    "canonified_service_name"      string => canonify("${service_name}");
    "canonified_init_command_name" string => canonify("/etc/init.d/${service_name} stop");

  methods:

      #Â Will be replaced later with less naive conditions (using either service, upstart, ...
      "placeholder" usebundle => command_execution("/etc/init.d/${service_name} stop");
      "placeholder" usebundle => _classes_copy("command_execution_${canonified_init_command_name}", "service_stop_${canonified_service_name}");
}
